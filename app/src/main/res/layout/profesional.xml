<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="Professional Support"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/doctor"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:onClick="chat"
        android:text="Doctor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Nurse"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_marginTop="53dp"
        android:onClick="chat"
        android:text="Nurse"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/doctor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctor"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Gp"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_marginTop="52dp"
        android:onClick="chat"
        android:text="GP"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/Nurse"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nurse"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Spech"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="52dp"
        android:onClick="chat"
        android:text="Speech Language Therapist"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Gp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>


